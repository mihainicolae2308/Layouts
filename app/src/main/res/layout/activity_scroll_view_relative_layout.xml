<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScrollViewRelativeLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="@dimen/dp64"
                android:layout_height="@dimen/dp70"
                android:background="@color/yellow"
                android:layout_margin="@dimen/dp15"/>

            <TextView
                android:id="@+id/text_view_pink"
                android:layout_width="@dimen/dp64"
                android:layout_height="@dimen/dp70"
                android:layout_alignParentRight="true"
                android:background="@color/pink"
                android:layout_margin="@dimen/dp15"/>

            <TextView
                android:id="@+id/text_view_blue"
                android:layout_width="@dimen/dp64"
                android:layout_height="@dimen/dp70"
                android:background="@color/blue"
                android:layout_toLeftOf="@id/text_view_pink"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"/>

            <TextView
                android:layout_width="@dimen/dp64"
                android:layout_height="@dimen/dp70"
                android:background="@color/light_blue"
                android:layout_toLeftOf="@id/text_view_blue"
                android:layout_marginTop="@dimen/dp15"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_pattern"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"/>

    </LinearLayout>








</ScrollView>